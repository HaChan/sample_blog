  <%= link_to gravatar_for(@entry.user), @entry.user %>
  <span class="user">
    <%= link_to @entry.title, @entry %>
  </span>
  <span class="content"><%= wrap(@entry.content) %></span>
  <span class="timestamp">
    Posted by <%= link_to @entry.user.name, @entry.user %>
     <%= time_ago_in_words(@entry.created_at) %> ago.
      at <%= @entry.created_at.strftime("%Y-%m-%d %a %H:%M:%S") %>
  </span>

  <p> Comment </p>
  <%= render '/shared/comment'%>

<% if !current_user.nil? %>
  <%= render '/shared/reply_form'%>
<% end %>
