
<li id="<%= feed_item.id %>">
  <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  <span class="user">
    <%= link_to feed_item.title, feed_item %>
  </span>
  <span class="content"><%= wrap(feed_item.content) %></span>
  <span class="timestamp">
    Posted by <%= link_to feed_item.user.name, feed_item.user %>
     <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>

  <%= render '/shared/edit_entry', entry: feed_item %>
	<%= render '/shared/delete_items', entry: feed_item %>
</li>
